{
  "name": "controller",
  "packageManager": "bun@1.1.38",
  "private": true,
  "workspaces": [
    "examples/next",
    "examples/node",
    "examples/svelte",
    "packages/*"
  ],
  "scripts": {
    "build:deps": "turbo build:deps",
    "build": "turbo build:deps build",
    "dev": "turbo build:deps dev",
    "storybook": "bun turbo build:deps storybook",
    "e2e": "turbo build:deps dev e2e",
    "e2e:ui": "turbo build:deps dev e2e:ui",
    "lint": "turbo lint format:check",
    "format": "turbo format lint:fix",
    "clean": "git clean -fdX && bun pm cache rm",
    "ci": "bun run clean && bun install",
    "release": "bun run build && bun -r --filter=@cartridge/controller --filter=@cartridge/connector publish --tag latest --no-git-checks --access public",
    "release:prerelease": "bun run build && bun -r --filter=@cartridge/controller --filter=@cartridge/connector publish --tag prerelease --no-git-checks --access public",
    "keychain": "bun --filter @cartridge/keychain",
    "controller": "bun --filter @cartridge/controller",
    "connector": "bun --filter @cartridge/connector",
    "book": "bun --filter @cartridge/documentation",
    "profil": "bun --filter @cartridge/profile",
    "example:next": "bun --filter @cartridge/controller-example-next",
    "example:svelte": "bun --filter @cartridge/controller-example-svelte",
    "test": "bun keychain test",
    "test:ci": "bun keychain test:ci",
    "test:storybook": "bun turbo build:deps test:storybook",
    "test:storybook:update": "bun turbo build:deps test:storybook:update",
    "check:regression": "bun ./scripts/check_regression.sh",
    "preview": "turbo build:deps preview",
    "prepare": "husky"
  },
  "dependencies": {
    "@cartridge/presets": "github:cartridge-gg/presets#d246ec1",
    "@cartridge/ui": "github:cartridge-gg/ui#bfcc1bd",
    "ajv": "^8.17.1"
  },
  "devDependencies": {
    "husky": "^9.1.7",
    "turbo": "^2.4.4",
    "vercel": "^37.14.0"
  },
  "files": [
    "*.js",
    "*.wasm",
    "*.d.ts"
  ]
}
