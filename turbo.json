{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "build:deps": {
      "dependsOn": ["^build:deps"],
      "outputs": [
        "dist/**",
        "!dist/documentation/**",
        "pkg/**",
        "!pkg/documentation/**"
      ]
    },
    "build": {
      "dependsOn": ["^build:deps", "^build"],
      "outputs": [".next/**", "!.next/cache/**", "!documentation/**"]
    },
    "dev": {
      "persistent": true,
      "dependsOn": ["^build:deps"],
      "outputs": [".next/**", "!.next/cache/**", "!documentation/**"]
    },
    "storybook": {
      "persistent": true,
      "dependsOn": ["^build:deps"]
    },
    "test:storybook": {
      "dependsOn": ["^build:deps"]
    },
    "lint": {},
    "format": {},
    "format:check": {},
    "e2e": {
      "dependsOn": ["^build:deps"]
    },
    "e2e:ui": {
      "dependsOn": ["^build:deps"],
      "persistent": true
    }
  },
  "globalDependencies": [
    "package.json",
    "pnpm-lock.yaml",
    "Cargo.lock",
    "Cargo.toml",
    "packages/account_sdk",
    "packages/account-wasm"
  ]
}
