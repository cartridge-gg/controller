{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@cartridge/tsconfig/react.json",
  "compilerOptions": {
    "paths": {
      "@/*": ["./src/*"]
    },
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["ES2020", "DOM"],
    "baseUrl": "./src",
    "allowJs": true,
    "strict": true,
    "noEmit": true,
    "types": ["node"],
    "plugins": [
      {
        "name": "next"
      }
    ],
    "jsx": "preserve"
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "**/*.wasm"
  ],
  "exclude": ["node_modules", "tests"]
}
