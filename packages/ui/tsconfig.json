{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@cartridge/tsconfig/react.json",
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": "./src",
    "outDir": "./dist",
    "paths": {
      "@/*": [
        "./src/*"
      ],
    },
    "typeRoots": [
      "./node_modules/@types",
      "./src/types"
    ]
  },
  "include": [
    "src/assets/**/*",
    "src/components/**/*",
    "src/hooks/**/*",
    "src/stories/**/*",
    "src/context.ts",
    "src/index.ts",
    "src/preset.ts",
    "src/utils/**/*",
    "src/types/**/*",
    "src/**/*.svg"
  ]
}
