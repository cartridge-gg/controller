{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@cartridge/tsconfig/react.json",
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": "./src",
    "outDir": "./dist",
    "paths": {
      "@/*": ["./src/*"]
    },
  },
  "plugins": [
    { "transform": "typescript-transform-paths" }
  ],
  "include": [
    "src/components/**/*",
    "src/utils.ts",
  ]
}
