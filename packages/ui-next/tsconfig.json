{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@cartridge/tsconfig/react.json",
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": "./src",
    "outDir": "./dist",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "src/assets/**/*",
    "src/components/**/*",
    "src/hooks/**/*",
    "src/stories/**/*",
    "src/context.ts",
    "src/index.ts",
    "src/preset.ts",
    "src/utils.ts",
    "src/types/**/*"
  ]
}
