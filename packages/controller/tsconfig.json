{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "../tsconfig/base.json",
  "compilerOptions": {
    "lib": [
      "ES2017",
      "ES2018",
      "ES2019",
      "ES2020",
      "ESNext",
      "DOM",
      "DOM.Iterable"
    ],
    "rootDir": ".",
    "outDir": "./dist",
    "composite": false,
    "incremental": false,
    "types": ["jest", "node"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
